<launch>

<arg name="scot_name"/>

<node name="slam_gmapping" pkg="gmapping" type="slam_gmapping">   
     <param name="output_frame_id" value="/$(arg scot_name)/base_link"/>
     <remap from="/scan" to="/$(arg scot_name)/scan"/>
     <remap from="/map" to="/$(arg scot_name)/map"/> 
     <param name="map_frame" value="/$(arg scot_name)/map" />
     <param name="odom_frame" value="/$(arg scot_name)/odom" />
     <param name="base_frame" value="/$(arg scot_name)/base_link" />
     <param name="inverted_laser" value="false" />
</node>

</launch>


